{
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "box",
      "iso_checksum_type": "md5",
      "iso_checksum": "96de4f38a2f07da51831153549c8bd0c",
      "iso_url": "http://centos.data-hotel.net/pub/linux/centos/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
      "http_directory": ".",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>"
      ],
      "headless": "true",
      "guest_os_type": "RedHat_64",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus",   "1 "   ]
      ],
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "50000s",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p"
    },
    {
      "type": "vmware-iso",
      "vm_name": "box",
      "iso_checksum_type": "md5",
      "iso_checksum": "96de4f38a2f07da51831153549c8bd0c",
      "iso_url": "http://centos.data-hotel.net/pub/linux/centos/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
      "http_directory": ".",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>"
      ],
      "headless": "true",
      "guest_os_type": "rhel7-64",
      "vmx_data": {
        "memsize": "1024",
        "numvcpus":   "1"
      },
      "vmdk_name": "box-disk1",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "50000s",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/bootstrap.sh",
            "scripts/sshd_config.sh",
            "scripts/vagrant.guest.account.sh",
            "scripts/virtualbox.guest.additions.sh"
          ]
        },
        "vmware-iso": {
          "scripts": [
            "scripts/bootstrap.sh",
            "scripts/sshd_config.sh",
            "scripts/vagrant.guest.account.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "centos-7.0.1406-x86_64.virtualbox.box"
        },
        "vmware": {
          "output": "centos-7.0.1406-x86_64.vmware.box"
        }
      }
    }
  ]
}
